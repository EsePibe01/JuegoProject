script/source = "extends CharacterBody2D

const SPEED = 300.0
const JUMP_VELOCITY = -400.0
const GRAVITY = 980.0
const FRICTION = 1500.0
const IMPACT_TIME = 0.15

# Saltos suaves
const JUMP_SHORT = 0.1
const JUMP_MEDIUM = 0.2
const JUMP_HIGH = 0.35

const SPRITE_NODE_NAME = \"AnimatedSprite2D\"

var sprite_node: AnimatedSprite2D
var jump_timer: float = 0.0
var max_jump_time: float = JUMP_HIGH
var is_jumping: bool = false
var impact_timer: float = 0.0
var is_impacting: bool = false
var was_on_floor: bool = false

func _ready():
	sprite_node = get_node(SPRITE_NODE_NAME)
	sprite_node.speed_scale = 2.0

func _physics_process(delta: float) -> void:
	# --- Movimiento horizontal ---
	var direction := Input.get_axis(\"ui_left\", \"ui_right\")
	if direction != 0:
		velocity.x = direction * SPEED
		sprite_node.flip_h = direction < 0
	else:
		velocity.x = move_toward(velocity.x, 0, FRICTION * delta)

	# --- Salto ---
	if Input.is_action_just_pressed(\"ui_accept\") and is_on_floor():
		jump_timer = 0.0
		is_jumping = true
		impact_timer = 0.0
		is_impacting = false
		max_jump_time = JUMP_HIGH  # Por defecto salto alto

	if Input.is_action_pressed(\"ui_accept\") and is_jumping:
		jump_timer += delta
		if jump_timer <= max_jump_time:
			velocity.y = JUMP_VELOCITY
		else:
			is_jumping = false
	else:
		is_jumping = false

	# --- Gravedad ---
	if not is_on_floor():
		velocity.y += GRAVITY * delta

	# --- Animaciones ---
	var on_floor = is_on_floor()

	# Impacto al aterrizar
	if on_floor and not was_on_floor:
		sprite_node.animation = \"Impacto\"
		sprite_node.frame = 0
		impact_timer = 0.0
		is_impacting = true

	if is_impacting:
		impact_timer += delta
		if impact_timer >= IMPACT_TIME:
			is_impacting = false

	# Animaciones de salto y caída
	if not on_floor:
		if velocity.y < 0:
			sprite_node.animation = \"Salto\"
			sprite_node.frame = 0
		else:
			sprite_node.animation = \"Caida\"
			sprite_node.frame = 0
		sprite_node.stop()
	elif not is_impacting:
		# Caminar o descanso
		if direction != 0:
			if sprite_node.animation != \"Caminar\":
				sprite_node.animation = \"Caminar\"
				sprite_node.frame = 0
				sprite_node.play()
		else:
			if sprite_node.animation != \"AlDescanso\":
				sprite_node.animation = \"AlDescanso\"
				sprite_node.frame = 0
				sprite_node.play()

	was_on_floor = on_floor

	# --- Movimiento final ---
	move_and_slide()
"

